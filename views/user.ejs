<!--
user personal area:
    dark/light button
    log out button
    list of saved ToDoLists
    when clicking a TDL user can see the whole list
    user will be able to edit the list name/items
-->

<html>

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <title>User's Personal Area</title>       

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <link href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" rel="stylesheet" type="text/css">
        <link href="css/style.css" rel="stylesheet" type="text/css">
    </head>

    <script>
        $(document).ready(function() { 
                  GetRandomItem();
               });
    </script>

    <body>
        <header>
            <div>
                <a id="top-text">Check and edit your saved TDLs</a>
                <form id="top-btn" action="/">
                    <input type="submit" value="Back to Home">
                </form>
            </div>
        </header>

        <div class="top-container">
         
            <h1><%= messages.username %>'s TDLs</h1>
            <!--
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Write something..." aria-describedby="button-addon2" id="txt-todo-name">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="add-item">Add Item</button>
                </div>
            </div>
            -->
            <div class="listholderstyle">
                <ul class="list-group list-group-flush" id="list-holder"></ul>
            </div>
        </div>

        <footer>
            <div id="bottom-fact">
                <p>
                    Random fact: <span id="fact"></span>
                </p>
            </div>
            <form id="logout-btn" action="/logout?_method=DELETE" method="POST">
                <input type="submit" value="Log Out">
            </form>
            <form id="darkmodeButton" onclick="darkMode()">
                <input type="button" value="Dark/Light">
            </form>
        </footer>

        
    </body>
    <script src="script/script.js"></script>
</html>