        <header>
            <div class="top-container">
                <h3>Your profile informations:</h3><br>
                <!--<button type="button" data-toggle="modal" data-target="#exampleModal"  class="btn btn-outline-secondary" id="create">Create</button>-->
            </div>
        </header>

        <div class="top-container">        
          <table>
            <tr>
              <th>Username:</th>
              <td class="tdprofile"><%= username %></td>
              <td class="tdprofile"><button type="button" data-toggle="modal" data-target="#exampleModal"  class="btn btn-outline-secondary" id="changeUser">Change Username</button></td>
            </tr>
            <tr>
              <th>Email:</th>
              <td class="tdprofile"><%= email %></td>
              <!-- <td><button class="btn btn-outline-secondary">Change Email</button></td> -->
              <td class="tdprofile">Email cannot be changed!</td>
            </tr>
            <tr>
              <th>Password:</th>
              <td class="tdprofile">*************</td>
              <td>
                  <button type="button" data-toggle="modal" data-target="#passwordModal"  class="btn btn-outline-secondary" id="changePassword">Change Password</button>
                 
              </td>

            </tr>
            <!-- <tr>
              <td>Log out from this account</td>
              <td><form id="logout-btn" action="/logout?_method=DELETE" method="POST">
                <button class="nav-item nav-link" type="submit" style ="border-width:0px;background-color: transparent;cursor:pointer">Logout</button>
            </form></td>
            </tr> -->
          </table>
        </div>

        <form class="credentials" action="/changeUser" method="POST">
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Change your username</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="form-group">
                      <label for="recipient-name" class="col-form-label">New username:</label>
                      <input type="text" class="form-control" id="description" name="description" required>
                    </div>
                    
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
            </div>
          </div>
        </form>

        <!-- CHANGE PASSWORD -->
        <form class="credentials" >
          <div class="modal fade" id="passwordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Change your password</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="form-group">
                      <label for="recipient-name" class="col-form-label">Old password:</label>
                      <input type="text" class="form-control" id="oldDescription" name="oldDescription" required>
                    </div>
                    <div class="form-group">
                      <label for="recipient-name" class="col-form-label">New password:</label>
                      <input type="text" class="form-control" id="newDescription" name="newDescription" required>
                    </div> 
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary" onclick="ChangePassword()">Save</button>
                </div>
              </div>
            </div>
          </div>
        </form>

        <footer>
          
      </footer>

        
