    <script>
      function ChangePassword()
      {
        var oldPass=$("#oldDescription").val();
        var newPass =$("#newDescription").val();

        $.ajax({
                  type: 'post',
                  url: '/changePassword',
                  data: { 
                      'oldpassword': oldPass,
                      'newpassword': newPass
                  },
                  success: function (data) {
                    if (data==-1){
                      alert("Old password is wrong!")
                    }else if((data==500))
                    {
                      alert("Some sql error occourred!")
                    }
                    else
                      alert("Password changed succesfully!")
                  }
              })
      }
    </script>
