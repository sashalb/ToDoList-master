        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        <script src= "https://code.jquery.com/jquery-3.6.0.min.js"> </script>
        
        <link href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" rel="stylesheet" type="text/css">
        
        <link href="css/style.css" rel="stylesheet" type="text/css">
        <script type="text/javascript">

          function DeleteItem(id){
              if (confirm("Are you sure?"))
              {
                $.ajax({
                    type: 'post',
                    url: '/deletelists',
                    data: { 
                        'IdItem': id
                    },
                    success: function (data) {
                      window.location.href = "/lists";
                    }
                })
              }
              else
                  window.location.href = "/lists";
          }

          function OpenList(id,Nome){
                $.ajax({
                    type: 'post',
                    url: '/openlists',
                    data: { 
                        'IdItem': id,
                        'Nome':Nome
                    },
                    success: function (data) {
                      window.location.href = "/edit";
                    }
                }) 
          }

        </script>
    </head>
   
    <body>
      <div id="topbar"> 
        <img src="https://cdn.pixabay.com/photo/2014/04/03/10/32/businessman-310819_960_720.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                  width="50px" alt="profile" style="margin-left: 25px;">
        <a id="title"><%= username %>'s To Do List</a>
      </div>
       
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <!-- <a class="nav-item nav-link"  href="/edit">Edit <span class="sr-only">(current)</span></a> -->
                <a class="nav-item nav-link" href="/profile">Profile</a>
                <a class="nav-item nav-link active" href="/lists">My Lists</a>
                <!-- <form id="logout-btn" action="/logout?_method=DELETE" method="POST"> -->
                <form id="logout-btn" action="/logout?_method=DELETE" method="POST">
                    <button class="nav-item nav-link" type="submit" style ="border-width:0px;background-color: transparent; cursor:pointer" onclick="return confirm('Logout form this account?');">Logout</button>
                </form>
                <!-- <a class="nav-item nav-link" onclick="darkMode()" style="cursor: pointer;">Dark/Light</a> -->
              </div>
            </div>
          </nav>
        <header>
            <div class="top-container">
                <h3>Your saved To Do Lists:</h3><br>
                <!--<button type="button" data-toggle="modal" data-target="#exampleModal"  class="btn btn-outline-secondary" id="create">Create</button>-->
            </div>
        </header>

        <div class="top-container">
            <table id="listsTable" data-paging="false" data-filter-control="true"  class="table">
                <thead  class="thead-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col" data-field="Description" data-filter-control="select">Description</th>
                    <th scope="col">Date</th>
                    <th scope="col">Tot.Items</th>
                    <th scope="col">Completed</th>
                  </tr>
                </thead>
                <%
                if(messages.allRows!=null)
                {
                  for(let row of messages.allRows ){
                    var id =row.Id;
                    var command="OpenList("+ id +",'" +  row.Nome +"')" %>
                    <tbody>
                        <tr>
                            <td><i onclick="DeleteItem(<%= row.Id %>)" class="fa fa-trash" aria-hidden="true" style="cursor: pointer;"></i></td>
                            <td style="cursor: pointer;" onclick='<%= command %>'><%= row.Nome %></td>
                            <td style="cursor: pointer;" onclick='<%= command %>'><%= row.Timestamp %></td>
                            <td style="cursor: pointer;" onclick='<%= command %>'><%= row.ITEMS %></td>
                            <td style="cursor: pointer;" onclick='<%= command %>'><%= row.DONE %></td>
                        </tr>
                    </tbody>
                    <% }
                } 
                %>
            </table>
            <button type="button" data-toggle="modal" data-target="#exampleModal"  class="btn btn-outline-secondary" id="create">Create a New List</button>
        </div>

        
        <form class="credentials" action="/createlists" method="POST">
          <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">New To Do List</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form>
                    <div class="form-group">
                      <label for="recipient-name" class="col-form-label">Description:</label>
                      <input type="text" class="form-control" id="description" name="description" required>
                    </div>
                    
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save</button>
                </div>
              </div>
            </div>
          </div>
          </form>
       
          <footer>
           
        </footer>

        
    </body>
    

