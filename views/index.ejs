    </head>
    <script>
        // $(document).ready(function() { 
        //           GetRandomItem();
        //        });
    </script>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#"><%= username %>'s To Do List</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-item nav-link active" href="/index">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="#">Profile</a>
                <a class="nav-item nav-link" href="/lists">My Lists</a>
                <a class="nav-item nav-link" onclick="darkMode()">Dark/Light</a>
                <form id="logout-btn" action="/logout?_method=DELETE" method="POST">
                    <button class="nav-item nav-link" type="submit" style ="border-width:0px;background-color: transparent;cursor:pointer" >Logout</button>
                </form>
                <!-- <div>
                <input type="checkbox"  id="darkmodeButton" onchange="darkMode()" checked data-toggle="toggle" data-size="xs" >
            </div> -->
              </div>
            </div>
          </nav>
        <header>
            <div class="top-text">
                <a><%= descriptionList %></a>
                <a>Need to remember something? Write it down here!</a><br>
            </div>
        </header>

        <div class="top-container">
          <form  action="/insertitemlist" method="POST">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Write something..." aria-describedby="button-addon2" id="description" name="description">
                <input type="hidden" class="form-control"id="listId" name="listId" value=<%= listindex %>>
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="add-item">Add Item</button>
                </div>
                
            </div>
          </form>
            <button type="button" data-toggle="modal" data-target="#exampleModal"  class="btn btn-outline-secondary" style="margin-left: 100px;margin-top: 3px;" id="save">Save List</button>
            <div class="listholderstyle">
                <ul class="list-group list-group-flush" id="list-holder"></ul>
            </div>
            <table id="listsTable" data-paging="false" class="table">
              <thead  class="thead-dark">
                <tr>
                 
                  <th scope="col">Description</th>
             
                </tr>
              </thead>
              <%
              if(messages.allRowsItems!=null)
              {
                for(let row of messages.allRowsItems ){%>
                 
                  
                  <tbody>
                      <tr style="cursor: pointer;">
                          <td><%= row.Descrizione %></td>
                          
                      </tr>
                  </tbody>
                  <% }
              } 
              %>
          </table>
           
        </div>

        <!------------------------------------------------------------------------------------------------>
        <form class="credentials" action="/createlists" method="POST">
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Save this To Do List</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <form>
                      <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Description:</label>
                        <input type="text" class="form-control" id="description" name="description" required>
                      </div>
                      
                    </form>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                  </div>
                </div>
              </div>
            </div>
        </form>
        <!------------------------------------------------------------------------------------------------>

        <footer>
            <div id="bottom-fact">
                <p>
                    Random fact: <span id="fact"></span>
                </p>
            </div>
            <!-- <form id="logout-btn" action="/logout?_method=DELETE" method="POST">
                <button type="submit">Log Out</button>
            </form> -->
        </footer>

        
      </body>
