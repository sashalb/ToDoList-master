        <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js"></script>
      
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

        
        <link href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" rel="stylesheet" type="text/css">
        
        <link href="css/style.css" rel="stylesheet" type="text/css">
    </head>
    <script>
        $(document).ready(function() { 
                  GetRandomItem();
               });
  </script>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#"><%= username %>'s To Do List</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                <a class="nav-item nav-link active" href="/index">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link" href="#">Profile</a>
                <a class="nav-item nav-link" href="/lists">My Lists</a>
                <form id="logout-btn" action="/logout?_method=DELETE" method="POST">
                    <button class="nav-item nav-link" type="submit" style ="border-width:0px;background-color: transparent;cursor:pointer" >Logout</button>
                </form>
                <!-- <div>
                <input type="checkbox"  id="darkmodeButton" onchange="darkMode()" checked data-toggle="toggle" data-size="xs" >
            </div> -->
              </div>
            </div>
          </nav>
        <header>
            <div class="top-text">
                <a>The simplest To Do List of all time</a><br>
                <button id="darkmodeButton" type="button" onclick="darkMode()">Dark/Light</button>
            </div>
        </header>

        <div class="top-container">
         
          
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Write something..." aria-describedby="button-addon2" id="txt-todo-name">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" id="add-item">Add Item</button>
                </div>
            </div>
            <div class="listholderstyle">
                <ul class="list-group list-group-flush" id="list-holder"></ul>
            </div>
        </div>

        <footer>
            <div id="bottom-fact">
                <p>
                    Random fact: <span id="fact"></span>
                </p>
            </div>
            <!-- <form id="logout-btn" action="/logout?_method=DELETE" method="POST">
                <button type="submit">Log Out</button>
            </form> -->
        </footer>

        
    </body>
    <script src="script/script.js"></script>
</html>